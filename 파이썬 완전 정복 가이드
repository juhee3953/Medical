# 1. 기본 문법
# 기본 출력
print("Hello, World!")

# 여러 값 출력
print("이름:", "김철수", "나이:", 25)

# 포맷팅
name = "김철수"
age = 25

# 방법 1: f-string (Python 3.6+, 권장)
print(f"이름: {name}, 나이: {age}세")

# 방법 2: format()
print("이름: {}, 나이: {}세".format(name, age))

# 방법 3: % 연산자 (구식)
print("이름: %s, 나이: %d세" % (name, age))

# 줄바꿈 제어
print("안녕", end="")  # 줄바꿈 없이
print("하세요")  # 결과: 안녕하세요

# 구분자 변경
print("사과", "바나나", "포도", sep=", ")  # 결과: 사과, 바나나, 포도






